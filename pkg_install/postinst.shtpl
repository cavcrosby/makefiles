#!/bin/sh
#
# postinst script for makefiles

set -e

if [ -d "${_INCLUDEDIR}/${MAKEFILES_DESTDIR}" ]; then
    # The path argument to rm will never result in '/' due to envsubst eval'ing the
    # below to an actual path.
    # 
    # shellcheck disable=2115
    rm --recursive --force "${_INCLUDEDIR}/${MAKEFILES_DESTDIR}"
fi

mv "${DEPLOYDIR_PATH}" "${_INCLUDEDIR}"
chown --recursive "${SUDO_USER}":"${SUDO_USER}" "${_INCLUDEDIR}"
